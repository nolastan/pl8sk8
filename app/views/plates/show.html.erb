<p id="notice"><%= notice %></p>

<p>
  <strong>State:</strong>
  <%= @plate.state %>
</p>

<p>
  <strong>Number:</strong>
  <%= @plate.number %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @plate.phone %>
</p>


<h3>Current Tickets</h3>
<% if @plate.raw_tickets.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Number</th>
        <th>Code</th>
        <th>Description</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @plate.raw_tickets.each do |ticket| %>
        <tr>
          <td><%= ticket[:date]%></td>
          <td><%= ticket[:id]%></td>
          <td><%= ticket[:code]%></td>
          <td><%= ticket[:description]%></td>
          <td><%= ticket[:amount]%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no tickets man! We'll let you know if you get one though. </p>
<% end %>

